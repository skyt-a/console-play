{
  "include": ["src/"],
  "compilerOptions": {
    "target": "es2016",
    "module": "es2015",
    "declaration": true,
    "declarationDir": "./lib/typescript",
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
